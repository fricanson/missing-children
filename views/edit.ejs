<% include header.ejs %>
    <% include nav.ejs %>

        <div class="container formdiv">
            <h1>Edit Missing Child</h1>
            <img class="formdiv-img" src="/image/<%= person.filename %>" alt="" width="300px">
            <form action="/person/<%= person._id %>?_method=PUT" method="POST">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="firstname">Firstname</label>
                            <input type="text" name="firstname" id="firstname" class="form-control"
                                value="<%= person.firstname %>">
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="lastname">Lastname</label>
                            <input type="text" name="lastname" id="lastname" class="form-control"
                                value="<%= person.lastname %>">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="address">Home Address</label>
                    <input type="textarea" name="address" id="address" class="form-control"
                        value="<%= person.address %>">
                </div>
                <div class="form-group">
                    <label for="age">Age</label>
                    <input type="number" name="age" id="age" class="form-control" value="<%= person.age %>">
                </div>
                <div class="form-group">
                    <label for="phone">Phone Number</label>
                    <input type="text" name="phone" id="phone" class="form-control" value="<%= person.phone %>">
                </div>
                <div class="form-group">
                    <label for="location">Location missing from</label>
                    <input type="text" name="location" id="location" class="form-control"
                        value="<%= person.location %>">
                </div>
                <div class="form-group">
                    <label for="date">Missing Form(Date)</label>
                    <input type="date" name="date" id="date" class="form-control"
                        value="<%= date.format(person.date, 'YYYY-MM-DD')%>">
                </div>
                <div class="form-group">
                    <label fors="gender">Gender</label>
                    <select name="gender" id="gender" class="form-control" value="<%= person.gender %>">
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                </div>
                <div class="delete-form">
                    <a href="/person" class="btn homebutton delete-button">Cancel</a>
                </div>
                <div class="delete-form">
                    <button class="btn homebutton delete-button" type="submit">Update</button>
                </div>
            </form>
        </div>

        <% include footer.ejs %>